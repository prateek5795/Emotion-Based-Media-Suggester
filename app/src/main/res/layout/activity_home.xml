<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e5"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="com.example.prateek.visionapitest.UI.HomeActivity">

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_incoming_bubble"
        android:padding="20dp"
        android:text="Hey! How are you feeling today?"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/llJoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:gravity="center"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happy!"
            android:textColor="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_joy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:gravity="center"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sad..."
            android:textColor="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_sad" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAnger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:gravity="center"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angry!"
            android:textColor="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_angry" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSurprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:gravity="center"
        android:minWidth="140dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surprised!"
            android:textColor="#000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_surprise" />
    </LinearLayout>

    <TextView
        android:id="@+id/bChooseGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:padding="20dp"
        android:text="I dont know. You guess?"
        android:textColor="#000" />

</LinearLayout>
